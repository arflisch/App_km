<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Car_kilometer.MainPage"
             xmlns:viewmodel="clr-namespace:Car_kilometer.ViewModels"
             x:DataType="viewmodel:MainPageVM"
             Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Text="Pseudo"
               FontSize="80"
               HorizontalOptions="Center"
               Grid.ColumnSpan="2"/>

        <Label x:Name="TotalKmValue" 
               Text="0"
               FontSize="50"
               Grid.Row="1"
               HorizontalOptions="Center"
               />

        <Label Text="Total Km"
               FontSize="24"
               Grid.Row="1"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <Label x:Name="TotalRideValue" 
               Text="0"
               FontSize="50"
               Grid.Row="1"
               Grid.Column="1"
               HorizontalOptions="Center"
               />

        <Label Text="Total Ride"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Grid.Row="1"
               Grid.Column="1"/>

        <Label x:Name="TotalTimeValue"
               Text="0"
               FontSize="50"
               Grid.Row="2"
               HorizontalOptions="Center"
               />

        <Label Text="Total Time"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Grid.Row="2"
               />

    </Grid>

</ContentPage>
